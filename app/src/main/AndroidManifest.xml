<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.narmijo.notasfirebase">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icono_notas_pet"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icono_notas_pet_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotasFirebase">
        <activity
            android:name=".Perfil.Perfil_Usuario"
            android:exported="false" />
        <activity
            android:name=".NotasArchivadas.Notas_Archivadas"
            android:exported="false" />
        <activity
            android:name=".ListarNotas.Listar_Notas"
            android:exported="false" />
        <activity
            android:name=".AgregarNota.Agregar_Nota"
            android:exported="false" /> <!-- SplashScreen como punto de entrada principal -->
        <activity
            android:name=".SplashScreen"
            android:exported="true"> <!-- Necesario para Android 12+ -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- MenuPrincipal -->
        <activity
            android:name=".MenuPrincipal"
            android:exported="true" /> <!-- Registro de usuario -->
        <activity
            android:name=".Registro"
            android:exported="true" /> <!-- Login -->
        <activity
            android:name=".Login"
            android:exported="true" /> <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>