<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icono_notas_pet"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icono_notas_pet_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotasFirebase">

        <!-- SplashScreen como punto de entrada principal -->
        <activity
            android:name=".SplashScreen"
            android:exported="true"> <!-- Necesario para Android 12+ -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MenuPrincipal -->
        <activity
            android:name=".MenuPrincipal"
            android:exported="false" />

        <!-- Registro de usuario -->
        <activity
            android:name=".Registro"
            android:exported="false" />

        <!-- Login -->
        <activity
            android:name=".Login"
            android:exported="false" />

        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

    </application>

</manifest>
